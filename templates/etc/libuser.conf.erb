[import]
login_defs = <%= @import_login_defs %>
default_useradd = <%= @import_default_useradd %>

[defaults]
modules = <%= @defaults_modules.join(',') %>
create_modules = <%= @defaults_create_modules.join(',') %>
crypt_style = <%= @defaults_crypt_style %>
<% if !@defaults_hash_rounds_min.empty? then -%>
hash_rounds_min = <%= @defaults_hash_rounds_min %>
<% end -%>
<% if !@defaults_hash_rounds_max.empty? then -%>
hash_rounds_max = <%= @defaults_hash_rounds_max %>
<% end -%>
<% if !@defaults_mailspooldir.empty? then -%>
mailspooldir = <%= @defaults_mailspooldir %>
<% end -%>
<% if !@defaults_moduledir.empty? then -%>
moduledir = <%= @defaults_moduledir %>
<% end -%>
<% if !@defaults_skeleton.empty? then -%>
skeleton = <%= @defaults_skeleton %>
<% end -%>

[userdefaults]
<%= @userdefaults %>

[groupdefaults]
<%= @groupdefaults %>

[files]
<% if @defaults_create_modules.include?('files') and !@defaults_modules.include?('files') then -%>
<%   if !@files_directory.empty? then -%>
directory = <%= @files_directory %>
<%   end -%>
<%   if !@files_nonroot.empty? then -%>
nonroot = <%= @files_nonroot %>
<%   end -%>
<% end -%>

[shadow]
<% if @defaults_create_modules.include?('shadow') and !@defaults_modules.include?('shadow') then -%>
<%   if !@shadow_directory.empty? then -%>
directory = <%= @shadow_directory %>
<%   end -%>
<%   if !@shadow_nonroot.empty? then -%>
nonroot = <%= @shadow_nonroot %>
<%   end -%>
<% end -%>

[ldap]
<% if @defaults_create_modules.include?('ldap') and !@defaults_modules.include?('ldap') then -%>
<%   if !@ldap_userBranch.empty? then -%>
userBranch = <%= @ldap_userBranch %>
<%   end -%>
<%   if !@ldap_groupBranch.empty? then -%>
groupBranch = <%= @ldap_groupBranch %>
<%   end -%>
<%   if !@ldap_server.empty? then -%>
server = <%= @ldap_server %>
<%   end -%>
<%   if !@ldap_basedn.empty? then -%>
basedn = <%= @ldap_basedn %>
<%   end -%>
<%   if !@ldap_binddn.empty? then -%>
binddn = <%= @ldap_binddn %>
<%   end -%>
<%   if !@ldap_user.empty? then -%>
user = <%= @ldap_user %>
<%   end -%>
<%   if !@ldap_password.empty? then -%>
password = <%= @ldap_password %>
<%   end -%>
<%   if !@ldap_authuser.empty? then -%>
authuser = <%= @ldap_authuser %>
<%   end -%>
<%   if !@ldap_bindtype.empty? then -%>
bindtype = <%= @ldap_bindtype %>
<%   end -%>
<% end -%>

[sasl]
<% if !@sasl_appname.empty? then -%>
appname = <%= @sasl_appname %>
<% end -%>
<% if !@sasl_domain.empty? then -%>
domain = <%= @sasl_domain%>
<% end -%>
